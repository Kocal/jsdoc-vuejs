{
  "bail": true,
  "verbose": true,
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "coverageReporters": ["json", "lcov", "html", "text"],
  "collectCoverageFrom": [
    "lib/core/*.js"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/__fixtures__/",
    "/cypress/"
  ]
}
